{
    "version": 2,
    "builds": [
        {
            "src": "server/**/*",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**/*",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/$1"
        }
    ]
}